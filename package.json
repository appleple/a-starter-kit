{
  "name": "name",
  "version": "1.0.0",
  "description": "Webサイト制作プロジェクト",
  "keywords": [
    "CMS"
  ],
  "homepage": "http://example.com/",
  "theme": "themes/root",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:watch": "onchange \"$npm_package_theme/scss\" -- npm run css:build",
    "css:build": "npm-run-all css:sass css:prefix css:comb css:min",
    "css:sass": "node-sass ./$npm_package_theme/src/scss/site.scss ./$npm_package_theme/dest/bundle.css",
    "css:prefix": "postcss -u autoprefixer -b 'last 2 versions' ./$npm_package_theme/dest/bundle.css",
    "css:comb": "csscomb ./$npm_package_theme/dest/bundle.css",
    "css:min": "postcss ./$npm_package_theme/dest/bundle.css -u cssnano > ./$npm_package_theme/dest/bundle.min.css",
    "js:watch": "onchange \"$npm_package_theme/js/src\" -- npm run js:build",
    "js:build": "webpack --config webpack.config.prod.js",
    "sync": "browser-sync start --proxy $npm_package_homepage --files ./$npm_package_theme/** --open $npm_package_homepage",
    "start": "npm-run-all -p js:watch css:watch sync",
    "dev": "webpack-dev-server"
  },
  "author": "appleple",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.18.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-es2015-for-of": "^6.22.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.22.0",
    "browser-sync": "^2.18.6",
    "browser-sync-webpack-plugin": "^1.1.4",
    "css-loader": "^0.26.1",
    "csscomb": "^3.1.7",
    "cssnano": "^3.10.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "^0.10.0",
    "node-sass": "^4.3.0",
    "npm-run-all": "^4.0.1",
    "onchange": "^3.2.1",
    "postcss-cli": "^3.0.0",
    "sass-loader": "^4.1.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.3"
  }
}
